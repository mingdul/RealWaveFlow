# WaveFlow Local Development Environment
# Database Configuration (Local PostgreSQL)
DB_HOST=postgres
DB_PORT=5432
DB_USERNAME=waveflow_user
DB_PASSWORD=local_password
DB_NAME=waveflow_local

# JWT Configuration
JWT_SECRET=local-jwt-secret-key-for-development

# Email Configuration (Development)
EMAIL_USER=test@example.com
EMAIL_PASS=test-password

# Google OAuth Configuration (Local)
GOOGLE_CLIENT_ID=your-local-google-client-id
GOOGLE_CLIENT_SECRET=your-local-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback

# AWS Configuration (Local/Test)
AWS_REGION=ap-northeast-2
AWS_ACCESS_KEY_ID=your-local-aws-access-key
AWS_SECRET_ACCESS_KEY=your-local-aws-secret-key
AWS_S3_BUCKET_NAME=waveflow-audio-local

# Frontend Configuration
REACT_APP_API_URL=http://localhost:8080
VITE_API_URL=http://localhost:8080

# Environment
NODE_ENV=development
